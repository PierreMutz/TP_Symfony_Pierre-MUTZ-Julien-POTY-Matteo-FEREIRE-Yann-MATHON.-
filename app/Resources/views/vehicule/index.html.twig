{% extends 'base.html.twig' %}

{% block body %}
    <h1>Vehicules list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Modele</th>
                <th>Serie</th>
                <th>Annee</th>
                <th>Categorie</th>
                <th>Kilometrage</th>
                <th>Etat</th>
                <th>Dateenregistrement</th>
                <th>Immatriculation</th>
                <th>Nbredeplace</th>
                <th>Transmission</th>
                <th>Moteur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vehicule in vehicules %}
            <tr>
                <td><a href="{{ path('vehicule_show', { 'id': vehicule.id }) }}">{{ vehicule.id }}</a></td>
                <td>{{ vehicule.marque }}</td>
                <td>{{ vehicule.modele }}</td>
                <td>{{ vehicule.serie }}</td>
                <td>{{ vehicule.annee }}</td>
                <td>{{ vehicule.categorie }}</td>
                <td>{{ vehicule.kilometrage }}</td>
                <td>{{ vehicule.etat }}</td>
                <td>{% if vehicule.dateEnregistrement %}{{ vehicule.dateEnregistrement|date('Y-m-d') }}{% endif %}</td>
                <td>{{ vehicule.immatriculation }}</td>
                <td>{{ vehicule.nbreDePlace }}</td>
                <td>{{ vehicule.transmission }}</td>
                <td>{{ vehicule.moteur }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('vehicule_show', { 'id': vehicule.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('vehicule_edit', { 'id': vehicule.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('vehicule_new') }}">Create a new vehicule</a>
        </li>
    </ul>
{% endblock %}
